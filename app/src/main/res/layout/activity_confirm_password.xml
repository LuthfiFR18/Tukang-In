<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConfirmPassword"
    android:background="@drawable/pngframe">

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="140dp"
        android:fontFamily="@font/robotobold"
        android:text="Verifikasi"
        android:textColor="@color/white"
        android:textSize="48sp"
        android:id="@+id/txtverif">
    </TextView>

    <LinearLayout
        android:id="@+id/layoutver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/txtverif"
        android:padding="50dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Masukkan kode verifikasi yang telah diterima"
            android:textSize="18dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:fontFamily="@font/robotoregular"
            android:id="@+id/txtinfo"
            />

        <EditText
            android:id="@+id/ConfirmPass"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/btn"
            android:hint="Kode"
            android:textSize="18dp"
            android:paddingLeft="40dp"
            android:textColorHint="@color/hint"
            android:paddingBottom="10dp"
            android:fontFamily="@font/robotomedium"
            />

        <TextView
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kirim ulang kode"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:fontFamily="@font/robotomedium"
            android:id="@+id/txtressendcode"
            android:gravity="center"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutbtnconfirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/layoutver"
        android:layout_marginTop="40dp"
        android:gravity="center">

        <Button

            android:layout_width="159dp"
            android:layout_height="57dp"
            android:background="@drawable/btnonclick"
            android:fontFamily="@font/robotomedium"
            android:hint="Konfirmasi"
            android:paddingBottom="10dp"
            android:textColorHint="@color/brown"
            android:textSize="18dp"/>




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_below="@+id/layoutbtnconfirm"
        android:layout_marginTop="60dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sudah punya akun?"
            android:textColor="@color/black"
            android:fontFamily="@font/robotomedium"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Masuk"
            android:textColor="@color/brown"
            android:fontFamily="@font/robotomedium"

            />

    </LinearLayout>


</RelativeLayout>