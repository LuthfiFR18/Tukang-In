<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginVertical="10dp"
    android:layout_marginHorizontal="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <RelativeLayout
        android:id="@+id/layoutlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/listImage"
            android:src="@drawable/santaidulugasih"
            android:scaleType="centerCrop"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            app:shapeAppearanceOverlay="@style/roundedImageViewRounded"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp">

            <TextView
                android:id="@+id/jarak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12Km"
                android:textSize="16sp"
                android:textStyle="bold"
                android:drawableStart="@drawable/ic_location_on_24"/>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/listName"
            android:text="Nama Tukang"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="30dp"
            android:layout_toEndOf="@id/listImage"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tukangdesc"
            android:text="Deskripsi Tukang"
            android:textSize="16sp"
            android:layout_below="@id/listName"
            android:layout_marginStart="100dp"
            android:textColor="@color/black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ratingnumber"
            android:text="4.1"
            android:layout_below="@id/tukangdesc"
            android:layout_marginStart="100dp"/>

        <RatingBar
            android:id="@+id/ratingbar"
            style="?android:ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tukangdesc"
            android:layout_marginStart="@id/ratingnumber"
            android:layout_marginTop="@id/ratingnumber"
            android:layout_marginEnd="@id/ratingnumber"
            android:layout_marginBottom="@id/ratingnumber"
            android:layout_toEndOf="@id/ratingnumber"
            android:rating="4.1"
            android:paddingBottom="10dp"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>


